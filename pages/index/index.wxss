/**index.wxss**/
.slide{
    height:250rpx;
}
.slide navigator,
.slide image {
    width: 100%;
    height:100%;
}
.grids{
    display: flex;
    flex-wrap:wrap;
    background-color: #fff;
    font-size: 28rpx;
    border-top:1rpx solid #ccc;
    border-left:1rpx solid #ccc;
    color:#888;
}

.grids .item {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    width: 33.3333%;
    height: 250rpx;
    border-bottom:1rpx solid #ccc;
    border-right:1rpx solid #ccc;
    box-sizing: border-box;
}

.grids .item image {
    width: 60rpx;
    height:60rpx;    
}
.grids .item text{
    margin-top:20rpx;
    display: block;
    color:#aaa;
}
.footer {
    display: flex;
    justify-content: space-around;
    background-color: #fff;
    padding:20rpx;
    margin-top:20rpx;
}
.footer image{
  width: 330rpx;
  height:150rpx;

}